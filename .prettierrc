{
  "overrides": [
    {
      "files": "*.astro",

      "options": {
        "parser": "astro"
      }
    },

    {
      "files": "*.vue",

      "options": {
        "parser": "vue"
      }
    }
  ],

  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-vue",
    "prettier-plugin-tailwindcss"
  ],

  "tailwindStylesheet": "./src/styles/global.css"
}
